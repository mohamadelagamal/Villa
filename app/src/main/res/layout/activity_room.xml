<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vmRoom"
            type="com.ui.room.RoomViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".room.RoomActivity">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminateBehavior="cycle"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="30dp"/>

        <ImageButton
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            android:onClick="@{()->vmRoom.backHome()}"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/back"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageCamera"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/camera_icon"
                android:layout_margin="20dp"
                android:background="@drawable/login_shap"
                android:onClick="@{()->vmRoom.showStorage()}"
                app:layout_constraintTop_toBottomOf="@id/backImage"
                app:layout_constraintBottom_toBottomOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_vertical|center_horizontal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".29" />
        <LinearLayout
            android:id="@+id/linearSpinnerIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/spinnerIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_margin="5dp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerID"
                android:padding="20dp"
                android:layout_margin="5dp"
                />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/linearSpinnerIcon"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/roomNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/room_name"
                android:inputType="text"
                android:text="@={vmRoom.roomName}"
                app:error="@{vmRoom.roomNameError}"
                android:maxLines="2"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RoomPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/RoomName"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:hint="@string/price"
            app:layout_constraintStart_toStartOf="parent"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@={vmRoom.priceRoom}"
                app:error="@{vmRoom.priceError}"
                android:inputType="number"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:id="@+id/mainLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/RoomPrice">
            <LinearLayout
                android:id="@+id/RoomNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@drawable/shap_room"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/room_sleep"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="@string/room"
                        android:layout_marginHorizontal="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/second"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="80dp"                                >
                    <ImageView
                        android:id="@+id/removeRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->vmRoom.removeRoom()}"
                        android:src="@drawable/remove_icon"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:background="@drawable/shap_room"/>
                    <TextView
                        android:id="@+id/numberRoomLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="@={vmRoom.numberRoom}"
                        android:layout_marginHorizontal="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/second"/>
                    <ImageView
                        android:id="@+id/addRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_icon_room"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:onClick="@{()->vmRoom.addRoom()}"
                        android:background="@drawable/shap_room"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Bath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/RoomNumber"
                android:background="@drawable/shap_room"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/bath_room"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="@string/bath"
                        android:layout_marginHorizontal="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/second"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="90dp"                                >
                    <ImageView
                        android:id="@+id/removeBath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/remove_icon"
                        android:onClick="@{()->vmRoom.removeBath()}"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:background="@drawable/shap_room"/>
                    <TextView
                        android:id="@+id/numberBathLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="2"
                        android:textSize="20dp"
                        android:text="@={vmRoom.numberBath}"
                        android:layout_marginHorizontal="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/second"/>
                    <ImageView
                        android:id="@+id/addBath"
                        android:layout_width="wrap_content"
                        android:onClick="@{()->vmRoom.addBath()}"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_icon_room"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:background="@drawable/shap_room"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/parkingLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:background="@drawable/shap_room"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/car_room"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="@string/parking"
                        android:layout_marginHorizontal="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/second"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="65dp"                                >
                    <ImageView
                        android:id="@+id/removeParking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/remove_icon"
                        android:layout_gravity="center_vertical"
                        android:onClick="@{()->vmRoom.removeParking()}"
                        android:padding="2dp"
                        android:background="@drawable/shap_room"/>
                    <TextView
                        android:id="@+id/numberParkingLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        tools:text="2"
                        android:textSize="20dp"
                        android:text="@={vmRoom.numberParking}"
                        android:layout_marginHorizontal="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/second"/>
                    <ImageView
                        android:id="@+id/addParking"
                        android:layout_width="wrap_content"
                        android:onClick="@{()->vmRoom.addParking()}"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_icon_room"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:background="@drawable/shap_room"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mainLinear"
            android:layout_margin="10dp"
            app:strokeWidth="2dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/second"
            >
            <EditText
                android:id="@+id/descriptionEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:text="@={vmRoom.description}"
                app:error="@{vmRoom.descriptionError}"
                android:lines="6"
                android:padding="9dp"
                android:textColorHint="@color/second"
                android:hint="@string/description"/>
        </com.google.android.material.card.MaterialCardView>
        <Button
            android:id="@+id/addRoomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{()->vmRoom.createRoom()}"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardDescription"
            android:layout_marginBottom="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>